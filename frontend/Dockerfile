FROM node:18-alpine

WORKDIR /app


# Copy package file
COPY package.json ./

# Install dependencies (dev + prod required for build)
RUN npm install

# Copy source code
COPY . .

# Build the app
RUN npm run build

# Expose port
EXPOSE 3000

# Command to run the application
CMD ["npm", "run", "preview", "--", "--host", "0.0.0.0", "--port", "3000"]
